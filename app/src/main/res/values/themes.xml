<resources xmlns:tools="http://schemas.andr oid.com/tools">
    <style name="Base.Theme.MyParty" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/items_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="android:statusBarColor">@color/background_splash_screen</item>
        <item name="android:navigationBarColor">@color/background_splash_screen</item>
    </style>

    <style name="Activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="circular_image">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_top_image">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="rounded_left_image">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="rounded_all_image">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="bottom_navigation">
        <item name="backgroundTint">@null</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
        <item name="itemIconTint">@color/menu_items_colors</item>
        <item name="itemTextColor">@color/menu_items_colors</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="text_background_style" >
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>

    <style name="image_button_main_style" >
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_main_style" >
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_secondary_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_secondary_style_small" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_main_style_small" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_main_style_12_small" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:width">110dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="search_view" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:editTextColor">@color/secondary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/main_color</item>
    </style>

    <style name="edit_text_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/hint_color</item>
    </style>

    <style name="text_medium_16_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_medium_16_with_background_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>

    <style name="text_medium_12_with_background_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>

    <style name="text_bold_30_style">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_bold_30_with_background_style">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>

    <style name="text_bold_20_style">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_medium_20_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_medium_24_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_tab_layout_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_bold_16_style">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_medium_12_style">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
